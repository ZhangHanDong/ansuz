<div id="navigation">
  <h3>Navigation:</h3>
  <ul>
    <% @topNav.each do |page| 
      isActive = (page == @breadcrumb[1] || page == @page)
      url = "/pages/" + page.name + "/" %> 
        <li <%= "class=\"active\"" if isActive -%>>
          <a href='<%= url %>'><%= page.title -%></a>
        </li> 
    <% end %> 
  </ul>
</div>
